         document.getElementById('role').addEventListener('change', function() {
            const studentFields = document.getElementById('studentFields');
            const facultyFields = document.getElementById('facultyFields'); // Make sure you have an element with the id 'facultyFields' in your HTML
            if (this.value === '10') {
                studentFields.style.display = 'block';
                facultyFields.style.display = 'none';
                // Ensure all student fields are required
                studentFields.querySelectorAll('input').forEach(input => input.required = true);
                // Remove required attribute from faculty fields
                facultyFields.querySelectorAll('input').forEach(input => input.required = false);
            } else {
                studentFields.style.display = 'none';
                facultyFields.style.display = 'block';
                // Remove required attribute from student fields
                studentFields.querySelectorAll('input').forEach(input => input.required = false);
